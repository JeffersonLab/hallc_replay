void Plotter(int npe)
{
  //Read Run Number from txt file
  int run_NUM = 0;
  char line[20];

  FILE *run = fopen("scripts/input_RUN.txt", "r");
  while(fgets(&line[0],19,run))
    {
      sscanf(&line[0],"%i",&run_NUM);
    }

  fclose(run);

  //Take in user specified boundaries
  int lower;
  int upper;
  cout << "Lower bound for peak? ";
  cin >> lower;
  cout << endl << "Upper bound for peak? ";
  cin >> upper;

  //Get Data to fit
  TFile *f = new TFile(Form("../../ROOTfiles/phgcer_replay_%d.root",run_NUM), "READ");
  TTree *tree = (TTree*)f->Get("T");
  
  TH1I *histo =new TH1I("histo","something",100,0,28500);

  tree->Draw("P.hgcer.adc_p[0]>>histo");
  
  //Presenting Data in a nice way
  TCanvas *c1 = new TCanvas("c1","Single Photoelectron Peaks",1200,600);
  c1->Divide(2,2);

  //Examining PMT 1
  TPad *p1 = (TPad*)(c1->cd(1));
  p1->SetLogy();
  histo->Draw("hist");

  TPad *p2 = (TPad*)(c1->cd(2));
  p2->SetLogy();
  tree->Draw("P.hgcer.adc_p[0]");
  

  
};

void gain_matching()
{
  int npe;
  cout << "Number of photoelectrons? ";
  cin >> npe;

  Plotter(npe);
  
};
